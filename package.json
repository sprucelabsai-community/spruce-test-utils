{
  "name": "@sprucelabs/test-utils",
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.256",
  "files": [
    "build"
  ],
  "skill": {
    "upgradeIgnoreList": [
      "concurrently",
      "@sprucelabs/jest-json-reporter",
      "@sprucelabs/resolve-path-aliases",
      "@sprucelabs/spruce-test-fixtures",
      "@sprucelabs/test-utils"
    ]
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "description": "Helpful utilities to make asserting more complicated conditions quick and easy! ⚡️",
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-test-utils",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-test-utils/issues"
  },
  "scripts": {
    "build.ci": "yarn build.tsc && yarn lint",
    "build.copy-files": "true",
    "build.dev": "yarn build.tsc --sourceMap",
    "build.dist": "yarn build.tsc && tsc --project tsconfig.dist.json && yarn build.esm-postbuild",
    "build.esm-postbuild": "esm-postbuild --target build/esm --patterns '**/*.js'",
    "build.resolve-paths": "true",
    "build.tsc": "tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "lint.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'yarn lint'",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "true",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "@sprucelabs/error": "^5.0.279",
    "@sprucelabs/test": "^7.7.222",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^1.0.281",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.7",
    "chokidar-cli": "^3.0.0",
    "conventional-changelog-sprucelabs": "^1.1.2",
    "eslint": "^8.2.0",
    "eslint-config-spruce": "^10.10.15",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/",
      "<rootDir>/build/esm/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/src/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ]
  },
  "yarn-upgrade-all": {
    "ignore": [
      "@sprucelabs/error",
      "@sprucelabs/esm-postbuild",
      "@sprucelabs/jest-json-reporter",
      "@sprucelabs/semantic-release",
      "@sprucelabs/test",
      "eslint-config-spruce"
    ]
  }
}
