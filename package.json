{
	"name": "@sprucelabs/test-utils",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "3.0.34",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "Helpful utilities to make asserting more complicated conditions quick and easy! ⚡️",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-test-utils",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-test-utils/issues"
	},
	"scripts": {
		"build": "yarn build.tsc",
		"build.tsc": "tsc",
		"rebuild": "yarn clean.all && yarn && yarn build",
		"clean": "rm -rf build/",
		"clean.all": "rm -rf node_modules/ ; rm yarn.lock; yarn clean",
		"lint": "eslint '**/*.ts' --fix && yarn lint.tsc",
		"lint.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'yarn lint'",
		"lint.tsc": "tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"test": "jest",
		"watch.tests": "jest --watch",
		"watch.build": "tsc -w",
		"release": "semantic-release",
		"upgrade.packages": "yarn run upgrade.packages.all",
		"upgrade.packages.yarn2": "jq -r '(.dependencies, .devDependencies) | keys | .[]' package.json | sort |uniq | xargs yarn up",
		"upgrade.packages.all": "yarn install ; yarn run upgrade.packages.yarn2 ; yarn ; yarn lint.fix || true",
		"upgrade.packages.test": "yarn run upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"dependencies": {
		"@sprucelabs/error": "latest",
		"@sprucelabs/test": "latest",
		"@types/lodash": "^4.14.166",
		"lodash": "^4.17.20"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@sprucelabs/jest-json-reporter": "latest",
		"@sprucelabs/semantic-release": "^4.0.6",
		"@typescript-eslint/eslint-plugin": "^4.11.1",
		"@typescript-eslint/parser": "^4.11.1",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"conventional-changelog-sprucelabs": "^1.1.2",
		"eslint": "^7.16.0",
		"eslint-config-spruce": "^10.9.127",
		"eslint-import-resolver-node": "^0.3.4",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.3.0",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-spruce": "^10.9.127",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"prettier": "^2.2.1",
		"semantic-release": "^17.3.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3"
	},
	"jest": {
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/"
		],
		"watchPathIgnorePatterns": [
			"<rootDir>/src/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		]
	},
	"yarn-upgrade-all": {
		"ignore": [
			"@sprucelabs/error",
			"@sprucelabs/test",
			"@sprucelabs/jest-json-reporter"
		]
	}
}
