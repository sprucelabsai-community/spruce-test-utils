{
  "name": "@sprucelabs/test-utils",
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.54",
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "description": "Helpful utilities to make asserting more complicated conditions quick and easy! ⚡️",
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-test-utils",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-test-utils/issues"
  },
  "scripts": {
    "build.ci": "yarn build.tsc",
    "build.dev": "yarn build.tsc --sourceMap",
    "build.dist": "yarn build.tsc && tsc --project tsconfig.dist.json && yarn build.esm-postbuild",
    "build.esm-postbuild": "esm-postbuild --target build/esm --patterns '**/*.js'",
    "build.tsc": "tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix '**/*.ts'",
    "lint": "eslint --cache '**/*.ts' --fix && yarn lint.tsc",
    "lint.tsc": "tsc -p . --noEmit",
    "lint.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'yarn lint'",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn run upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.build.dev": "tsc -w --sourceMap"
  },
  "dependencies": {
    "@sprucelabs/error": "^5.0.3",
    "@sprucelabs/test": "^7.7.55",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^1.0.35",
    "@sprucelabs/jest-json-reporter": "^6.0.29",
    "@sprucelabs/semantic-release": "^4.0.6",
    "@sprucelabs/spruce-test-fixtures": "^5.4.30",
    "@sprucelabs/test-utils": "^3.0.53",
    "@types/lodash": "^4.14.172",
    "chokidar-cli": "^3.0.0",
    "conventional-changelog-sprucelabs": "^1.1.2",
    "eslint": "^7.32.0",
    "eslint-config-spruce": "^10.10.10",
    "jest": "^27.1.0",
    "jest-circus": "^27.1.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/",
      "<rootDir>/build/esm/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/src/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ]
  },
  "yarn-upgrade-all": {
    "ignore": [
      "@sprucelabs/error",
      "@sprucelabs/esm-postbuild",
      "@sprucelabs/jest-json-reporter",
      "@sprucelabs/semantic-release",
      "@sprucelabs/test",
      "eslint-config-spruce"
    ]
  }
}
