{
	"name": "@sprucelabs/test-utils",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "0.0.1",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "Spruce test utilities",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-test-utils",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-test-utils/issues"
	},
	"scripts": {
		"build": "npm run clean && concurrently \"npm run build.node\"",
		"build.node": "tsc",
		"build.browser": "tsc --project tsconfig.browser.json",
		"watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' --fix && npm run lint.tsc",
		"lint.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run lint'",
		"lint.tsc": "tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"test": "jest",
		"test.watch": "jest --watch",
		"release": "semantic-release",
		"upgrade.packages": "yarn upgrade --latest && rm yarn.lock | true && yarn | true && yarn lint.fix | true",
		"upgrade.packages.all": "yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"dependencies": {
		"@sprucelabs/test": "^7.0.10"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^4.0.5",
		"@types/lodash": "^4.14.161",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"eslint": "^7.9.0",
		"eslint-config-spruce": "^10.9.46",
		"lodash": "^4.17.20",
		"prettier": "^2.1.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.2",
		"yarn": "^1.22.5"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.ts"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/src/.spruce/$1"
		}
	}
}
