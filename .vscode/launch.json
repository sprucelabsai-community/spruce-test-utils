	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "test.file",
			"runtimeExecutable": "yarn",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"jest",
				"${fileBasenameNoExtension}",
				"--no-cache"
			],
			"port": 9229,
			"cwd": "${fileDirname}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test.all",
			"runtimeExecutable": "yarn",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"jest",
			],
			"port": 9229,
			"cwd": "${fileDirname}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
